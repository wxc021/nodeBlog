<!doctype html>
<html>
	<head>
		<meta http-equiv="Content-Type"content="text/html;charset=utf-8">
		<title>登录页面</title>
		<meta name="Keywords" content="">
		<meta name="Description" content="">
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"/>
		<link rel="stylesheet" type="text/css" href="/css/main.css"/>
		<script src="/js/jquery-1.11.3.min.js"></script>
	</head>
	<body class="login">

	<div class="bg-login"></div>
	<canvas id="canvas"></canvas>
	<div class="container max378">
		<form class="form-horizontal" action="" method="post">
			<div class="page-header text-center">
				<img class="img-responsive login-img" src="/image/logo.png" alt="" />
			</div>
			<div class="input-group mt20">
				<span class="input-group-addon bg-span">
					<span class="glyphicon glyphicon-user bg-gl"></span>
				</span>
				<input type="text" id="username" class="form-control bg-input" placeholder="请输入用户名"/>
			</div>
			<div class="input-group mt20">
				<span class="input-group-addon bg-span">
					<span class="glyphicon glyphicon-lock bg-gl"></span>
				</span>
				<input type="password" id="pwd" class="form-control bg-input" placeholder="请输入密码"/>
			</div>
			<div id="login-btn" class="btn btn-primary mt20 bg-style w100p">登录</div>
			<div class="input-group pull-left mt10">
				<a href="#" class="btn-link">遇到问题</a>
			</div>
			<div class="input-group pull-right mt10">
				<a href="/register" class="btn-link">立即注册</a>
			</div>
		</form>
	</div>
  	<script type="text/javascript" src="/js/logonAnimate.js"></script>
	<script>
		$(function(){
			//触发回车事件
			$(document).on("keyup", function (e) {
				if(e.keyCode=="13") {
					if ($("#pwd").val() != '' && $("#username").val() !== '') {
						$("#login-btn").trigger("click");
					}
				}
			})

			$("#login-btn").on("click", function () {
				//console.log($("#username").val(),$("#pwd").val())


				$.ajax({
					type:"post",
					url:"/login",
					data:{username:$("#username").val(),password:$("#pwd").val()},
				success: function (data) {
					console.log(data);
					if(data.code=="0000"){
							//alert("登录成功")
							location.href="/index";

					}else if(data.code=="1111"){
						alert("密码错误");
					}else{
							alert("用户不存在")
						}


					}
				})
			})



		});


	</script>
	</body>
</html>
