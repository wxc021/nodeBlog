							<div class="container" style="width: auto;">
								<form id="updateUserForm" role="form" method="post" action="/admin/updateUser" class="form-horizontal ptb20 mt30">
									<% for(var key in data){%>
									<div class="form-group has-error">
										<label for="inputEmail3" class="word col-xs-2 control-label">用户名</label>
										<div class="col-xs-8">
											<input type="text" name="username" value="<%=data[key].username%>" class="form-control">
										</div>
										<p class="col-xs-2 form-control-static text-left text-danger">必填</p>
									</div>
									<div class="form-group has-warning">
										<label for="inputEmail3" class="word col-xs-2 control-label">用户权限</label>
										<div class="col-xs-8">
											<% if(data[key].admin=="0"){%>
												<select class="form-control" name="admin">
													<option value="0" selected>普通用户</option>
													<option value="1">系统管理员</option>
												</select>
												<% }else if(data[key].admin=="1"){%>
												<select class="form-control" name="admin">
													<option value="0">普通用户</option>
													<option value="1" selected>系统管理员</option>
												</select>

												<%}%>

										</div>
										<p class="col-xs-2 form-control-static text-left text-danger">必填</p>
									</div>
									<div class="form-group has-success">
										<label for="inputEmail3" class="word col-xs-2 control-label">昵称</label>
										<div class="col-xs-8">
											<input type="text" name="nicknane" value="<%=data[key].nicknane%>" class="form-control">
										</div>
									</div>
									<div class="form-group has-success">
										<label for="inputEmail3" class="word col-xs-2 control-label">Email</label>
										<div class="col-xs-8">
											<input type="email" name="email" value="<%=data[key].email%>" class="form-control">
										</div>
									</div>
									<div class="form-group has-success">
										<label for="inputEmail3" class="word col-xs-2 control-label">重置密码</label>
										<div class="col-xs-8">
											<input type="password" name="password" class="form-control">
										</div>
									</div>
									<div class="form-group has-success">
										<label for="inputEmail3" class="word col-xs-2 control-label">确定密码</label>
										<div class="col-xs-8">
											<input type="password" name="surepwd" class="form-control">
										</div>
									</div>
									<input type="hidden" name="id" value="<%=data[key].id%>">
									<%}%>
								</form>
								<div class="col-xs-4 col-xs-offset-4 text-center mt30">
									<div class="btn-group">
